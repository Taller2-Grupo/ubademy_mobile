<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.VerExamenesFragment">

    <TextView
        android:id="@+id/TxTTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Examenes del curso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:paddingVertical="10dp"
        android:paddingHorizontal="25dp"

        android:textSize="15sp"
        />



    <View
        android:id="@+id/divider"
        android:layout_width="405dp"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="30dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/TxTTitulo"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewExamenes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FabOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="30dp"
        android:contentDescription="Nuevo examen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_24"

        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/TextViewCrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/FabAddExamen"
        app:layout_constraintEnd_toStartOf="@+id/FabAddExamen"
        app:layout_constraintTop_toTopOf="@+id/FabAddExamen"

        android:visibility="invisible"
        tools:visibility="visible"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FABEditarExamen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        app:fabCustomSize="50dp"
        android:layout_marginHorizontal="30dp"


        android:contentDescription="FloatingActionButton"
        app:layout_constraintBottom_toTopOf="@+id/FabOpen"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_edit_button"

        android:layout_marginBottom="50dp"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/TextViewEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/FABEditarExamen"
        app:layout_constraintEnd_toStartOf="@+id/FABEditarExamen"
        app:layout_constraintTop_toTopOf="@+id/FABEditarExamen"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FabAddExamen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:contentDescription="Nuevo examen"
        app:fabCustomSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/FABEditarExamen"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_24"
        tools:visibility="visible"
        android:visibility="invisible"
        />

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"

        >

        <TextView
            android:id="@+id/TxtAvisoEdicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    Selecciona un examen para editar"
            android:textStyle="italic"
            android:gravity="center_vertical"
            android:paddingVertical="10dp"
            android:paddingHorizontal="25dp"
            android:drawableLeft="@drawable/ic_warning_circle_tiny"

            android:textSize="12sp"

            android:visibility="invisible"
            tools:visibility="visible"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>