<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="300dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginVertical="5dp"
    android:transitionName="@{@string/consignas_transition_name(consigna.id)}"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TxTEnunciado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="24dp"
            android:text="Enunciado"

            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/panelCalificacion"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toEndOf="@+id/ImgStatus"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TxTEstado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:text="Estado"
            android:textSize="15dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/panelCalificacion"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintStart_toEndOf="@+id/ImgStatus"
            app:layout_constraintTop_toBottomOf="@id/TxTEnunciado"
            app:layout_constraintVertical_bias="0.515" />

        <LinearLayout
            android:id="@+id/panelCalificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            >

            <TextView
                android:id="@+id/TXTcalificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"

                android:layout_marginHorizontal="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                />

            <TextView
                android:id="@+id/TXTcalificacionMaxima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" pts"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/ImgStatus"
            android:layout_width="25dp"
            android:layout_height="25dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="10dp"

            android:src="@drawable/ic_warning_circle"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>