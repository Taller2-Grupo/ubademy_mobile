<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.VerExamenesFragment">

    <TextView
        android:id="@+id/TxTTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear nuevo examen"
        android:textColor="@color/black_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:paddingVertical="10dp"
        android:paddingHorizontal="25dp"

        android:textSize="15sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TxTNombreExamen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TxTTitulo"
        android:hint="Titulo del examen"
        android:layout_margin="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:lines="1"

            />

    </com.google.android.material.textfield.TextInputLayout>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TxTNombreExamen"
        app:layout_constraintBottom_toTopOf="@+id/divider2">

        <LinearLayout
            android:id="@+id/ContenedorDeConsignas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consignas"
                android:layout_marginVertical="5dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerConsignas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/BtnNuevaConsigna"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Nueva consigna"/>

                <Button
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_info"
                    android:backgroundTint="@color/black_200"
                    android:layout_marginHorizontal="10dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/divider"
        android:layout_width="405dp"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="30dp"
        app:layout_constraintTop_toBottomOf="@id/TxTTitulo"
        />

    <View
        android:id="@+id/divider2"
        android:layout_width="405dp"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="30dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toTopOf="@id/botonera"
        />

    <LinearLayout
        android:id="@+id/botonera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        >

        <Button
            android:id="@+id/BtnEliminarExamen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:text="Eliminar"
            android:layout_marginHorizontal="5dp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/BtnCrearExamen"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"

            android:background="@drawable/button_rounded"
            android:text="Crear"
            android:layout_marginHorizontal="5dp"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>