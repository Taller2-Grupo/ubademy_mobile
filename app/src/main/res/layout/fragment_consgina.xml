<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:checkable="false"
    android:clickable="false"
    android:focusable="false"
    android:layout_marginVertical="5dp"
    android:transitionName='@string/consignas_transition_name'>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Fragments.ConsginaFragment">

        <TextView
            android:id="@+id/TxTEnunciado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enunciado"
            android:textSize="20dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"

            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputRespuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_primary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toBottomOf="@id/TxTEnunciado"
            >

                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:hint="Respuesta"
                    android:inputType="none"
                    android:maxLines="10"
                    android:minLines="3"
                    android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/correctorContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            app:layout_constraintBottom_toTopOf="@id/calificacionContainer"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Corrector:"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/corrector"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Juan Emilio"
                android:gravity="end"
                android:paddingHorizontal="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/calificacionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toTopOf="@+id/botoneraAdmin"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Calificacion:"
                android:layout_marginHorizontal="10dp"/>
            <EditText
                android:id="@+id/calificacion"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="0"
                android:gravity="end"
                android:paddingHorizontal="20dp"/>

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"

            app:layout_constraintBottom_toTopOf="@id/correctorContainer"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            />

        <LinearLayout
            android:id="@+id/botoneraAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            >

            <Button
                android:id="@+id/BtnSiguiente"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Siguiente"
                android:layout_marginHorizontal="5dp"
                android:visibility="visible"

                />

            <Button
                android:id="@+id/BtnDesaprobar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Mal"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/button_rounded"
                android:visibility="gone"
                android:clickable="true"
                />

            <Button
                android:id="@+id/BtnAprobar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:background="@drawable/button_rounded"
                android:text="Bien"
                android:layout_marginHorizontal="5dp"
                android:visibility="gone"
                android:clickable="true"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
